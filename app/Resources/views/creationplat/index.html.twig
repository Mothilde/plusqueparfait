{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css')  }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-theme.min.css')  }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/stylesheet.css')  }}" />
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>

{% endblock %}

{% block body %}
    <div class="navbar_homepage">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li class="active"> <a href="{{ path('listerepas_homepage') }}">Accueil</a> </li>
                    <li> <a href="{{ path('liste_index') }}">Mes repas</a> </li>
                    <li> <a href="#">Mes invités</a> </li>
                    <li> <a href="{{ path('creationplat_homepage') }}">Mes recettes</a> </li>
                </ul>
                <form class="navbar-form navbar-right inline-form">
                    <div class="form-group">
                        <input type="search" class="input-sm form-control" placeholder="Recherche">
                        <button type="submit" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-eye-open"></span> Chercher</button>
                    </div>
                </form>
            </div>
        </nav>
    </div>
    <img id="caro_image" src="{{ asset('assets/images/caro.png') }}" alt="caro" />
    <h1>Creation Plats</h1>

    <table id="ingredients">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Ingredient1</th>
                <th>Ingredient2</th>
                <th>Ingredient3</th>
                <th>Ingredient4</th>
                <th>Ingredient5</th>
                <th>Ingredient6</th>
                <th>Ingredient7</th>
                <th>Ingredient8</th>
                <th>Ingredient9</th>
                <th>Ingredient10</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for creationplat in creationplats %}
            <tr>
                <td>{{ creationplat.nom }}</td>
                <td>{{ creationplat.ingredient1 }}</td>
                <td>{{ creationplat.ingredients2 }}</td>
                <td>{{ creationplat.ingredient3 }}</td>
                <td>{{ creationplat.ingredient4 }}</td>
                <td>{{ creationplat.ingredient5 }}</td>
                <td>{{ creationplat.ingredient6 }}</td>
                <td>{{ creationplat.ingredient7 }}</td>
                <td>{{ creationplat.ingredient8 }}</td>
                <td>{{ creationplat.ingredient9 }}</td>
                <td>{{ creationplat.ingredient10 }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('creationplat_show', { 'id': creationplat.id }) }}"><button type="button" class="btn btn-info">Retour à la  liste</button></a></a>
                        </li>
                        <li>
                            <a href="{{ path('creationplat_edit', { 'id': creationplat.id }) }}"><button type="button" class="btn btn-info glyphicon glyphicon-pencil">&nbsp;Editer</button></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li id="creer_plat">
            <a href="{{ path('creationplat_new') }}"><button type="button" class="btn btn-success">Create a new entry</button></a>
        </li>
    </ul>
{% endblock %}
