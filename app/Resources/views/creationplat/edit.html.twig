{% extends 'base.html.twig' %}
{% block body %}
    <div class="navbar_homepage">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li> <a href="{{ path('listerepas_homepage') }}">Accueil</a> </li>
                    <li> <a href="{{ path('liste_index') }}">Mes repas</a> </li>
                    <li> <a href="{{ path('invites_index') }}">Mes invités</a> </li>
                    <li class="active"> <a href="{{ path('creationplat_index') }}">Mes recettes</a> </li>
                </ul>
                <form class="navbar-form navbar-right inline-form">
                    <div class="form-group">
                        <input type="search" class="input-sm form-control" placeholder="Recherche">
                        <button type="submit" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-eye-open"></span> Chercher</button>
                    </div>
                </form>
            </div>
        </nav>
    </div>
    <div class="header_menu">
        <img id="iconetoque" src="{{ asset('assets/images/iconetoque.png') }}" alt="iconetoque" />
        <h1>Modifier un Plat</h1>
    </div>
    <div class="liste_course">
        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
        <input type="submit" class="btn btn-success" value="Modifier" />
        <a href="{{ path('creationplat_index') }}"><button type="button" class="btn btn-info"><span class="glyphicon glyphicon-chevron-left"></span>Retour à la liste</button></a>

        <!-- Début de la modal, bouton supprimer qui va faire apparaitre la modal -->
        <button data-toggle="modal" class="btn btn-danger" data-target="#infos">
            <i class="glyphicon glyphicon-trash"></i>Supprimer</button>
        {{ form_end(edit_form) }}
        <div class="modal fade" id="infos">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">x</button>
                        <h4 class="modal-title">Confirmation</h4>
                    </div>
                    <div class="modal-body">
                        Etes-vous sur de vouloir supprimer cet article ?
                    </div>
                    {{ form_start(delete_form) }}
                    <div class="modal-footer">
                        {{ form_widget(delete_form) }}
                        <button type="submit" value="OUI" class=" btn btn-info">OUI</button>
                        <button class="btn btn-info" data-dismiss="modal">NON</button>
                        {{ form_end(delete_form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
